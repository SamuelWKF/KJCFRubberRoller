@model IPagedList<KJCFRubberRoller.Models.ApplicationUser>
@using PagedList;
@using PagedList.Mvc;
@using KJCFRubberRoller.Models;
@{
    ViewBag.Title = "Staff List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row mb-4">
        <div class="mx-auto">
            <div class="py-2 bg-kjcf">
                <h2 class="text-white text-center">Staff List</h2>
            </div>
            <div class="bg-white container py-3">
                @if (TempData["formStatus"] != null)
                {
                    <div class="alert @((bool)TempData["formStatus"] == true ? "alert-success" : "alert-danger") alert-dismissible fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            <span class="sr-only">Close</span>
                        </button>
                        @Html.Raw(TempData["formStatusMsg"])
                    </div>
                }
                @Html.Label("Search:")
                @Html.TextBox("Search", "", htmlAttributes: new { @class = "form-control staff_search", placeholder = "Search staff here..." })
                <br />
                <table class="table table-responsive table-hover table-striped sortable">
                    <tr class="text-center">
                        <th>
                            Staff ID
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Position
                        </th>
                        <th>
                            Status
                        </th>
                        <th>Edit Details</th>
                    </tr>

                    @if (Model.FirstOrDefault() == null)
                    {
                        <tr><td colspan="6" class="text-center">There are currently no staff member.</td></tr>
                    }

                    @if (Model != null)
                    {
                        foreach (var item in Model.Select((value, index) => new { value, index }))
                        {
                            <tr class="text-center">
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.staffID)
                                </td>
                                <td class="text-left">
                                    @Html.DisplayFor(modelItem => item.value.name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.value.Email)
                                </td>
                                <td>
                                    @{
                                        var role = UserRole.getRole(item.value.position);
                                    }
                                    @role
                                </td>
                                <td>
                                    @{
                                        var status = AccountStatus.getStatus(item.value.status);
                                    }
                                    @status
                                </td>
                                <td class="text-center">
                                    <a href="@Url.Action("Edit", "Staff", new { id = item.value.staffID })" class="btn btn-success">
                                        <i class='far fa-edit'></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </table>
                @Html.PagedListPager(Model, i => Url.Action("List", "Account", new { i }))
            </div>
        </div>
    </div>
</div>

<script>
    // IIFE (Immediately Invoked Function Expression)
    (function () {
        // Select the search input box for each of the table list
        const searchBox = document.querySelector('input.staff_search');
        // Add event listeners to each search box
        searchBox.addEventListener('input', (e) => {
            const staffTable = document.querySelector('.table').children[1].children;
            Array.from(staffTable).forEach((v, i) => {
                if (v.innerText.toLowerCase().indexOf(searchBox.value.toLowerCase()) !== -1) {
                    v.style.removeProperty('display');
                } else {
                    v.style.display = 'none';
                }
            });
        });
    })();
</script>

