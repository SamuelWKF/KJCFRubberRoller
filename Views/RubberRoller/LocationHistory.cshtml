@model IPagedList<KJCFRubberRoller.Models.RollerLocation>
@using PagedList;
@using PagedList.Mvc;

@{
    ViewBag.Title = $"{ViewData["rollerID"]} Location History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row mb-4">
    <div class="col-md-6 mx-auto">
        <div class="py-2 mt-4 bg-kjcf">
            <h2 class="text-white text-center">Location History for Roller @ViewData["rollerID"]</h2>
        </div>
        <div class="bg-white container-fluid py-3">
            @Html.Label("Search:")
            @Html.TextBox("Search", "", htmlAttributes: new { @class = "form-control rr_location_search", placeholder = "Search location record here..." })
            <br />
            <table class="table table-hover table-striped sortable">
                <thead>
                    <tr class="text-center">
                        <th>
                            No.
                        </th>
                        <th>
                            Location
                        </th>
                        <th>Operation<br />Line No.</th>
                        <th>
                            Date Time<br />In
                        </th>
                        <th>
                            Date Time<br />Out
                        </th>
                    </tr>
                </thead>
                @if (Model.FirstOrDefault() == null)
                {
                    <tr><td colspan="5" class="text-center">There are currently no location history record.</td></tr>
                }

                @if (Model != null)
                {
                    foreach (var item in Model.Select((value, index) => new { value, index }))
                    {
                        <tr>
                            <td class="text-center">
                                @(item.index + 1)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.value.location)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.value.operationLine)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.value.dateTimeIn)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.value.dateTimeOut)
                            </td>
                        </tr>
                    }
                }
            </table>
            @Html.PagedListPager(Model, i => Url.Action("Index", "RubberRoller", new { i }))
        </div>
    </div>
</div>


<script>
    // IIFE (Immediately Invoked Function Expression)
    (function () {
        // Select the search input box for each of the table list
        const searchBox = document.querySelector('input.rr_location_search');
        // Add event listeners to each search box
        searchBox.addEventListener('input', (e) => {
            const table = document.querySelector('.table').children[1].children;
            Array.from(table).forEach((v, i) => {
                if (v.innerText.toLowerCase().indexOf(searchBox.value.toLowerCase()) !== -1) {
                    v.style.removeProperty('display');
                } else {
                    v.style.display = 'none';
                }
            });
        });
    })();
</script>

