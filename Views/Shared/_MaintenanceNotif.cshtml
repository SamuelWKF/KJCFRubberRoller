@using KJCFRubberRoller.Models;
@{
    using (ApplicationDbContext _db = new ApplicationDbContext())
    {
        var newMaintenanceCount = _db.maintenances.Count(m => m.status == RollerMaintenance.PENDING_APPROVAL);
        if (newMaintenanceCount != 0)
        {
            <span class="badge badge-danger">@newMaintenanceCount New report</span>
        }
    }
}