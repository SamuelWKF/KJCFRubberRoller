@using KJCFRubberRoller.Models

<nav class="navbar navbar-expand-sm navbar-dark bg-kjcf sticky-top">
    <a class="navbar-brand" href="/"><img src="~/Content/Images/kjcf.jpg" alt="KJCF" width="120px"></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="collapsibleNavId">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            @if (!User.IsInRole(UserRole.getRole(3)) && User.Identity.IsAuthenticated)
            {
                if (User.IsInRole(UserRole.getRole(1)) || User.IsInRole(UserRole.getRole(2)))
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="manageUserDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Manage Staff Account</a>
                        <div class="dropdown-menu" aria-labelledby="manageUserDropdown">
                            @Html.ActionLink("View All Staff", "list", "staff", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                            @Html.ActionLink("Add New Staff Account", "register", "staff", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                        </div>
                    </li>
                }
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="manageRollerDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Manage Roller</a>
                    <div class="dropdown-menu" aria-labelledby="manageRollerDropdown">
                        @Html.ActionLink("View All Roller Category", "", "rollercategory", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                        @Html.ActionLink("Add New Roller Category", "create", "rollercategory", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                        <div class="dropdown-divider"></div>
                        @Html.ActionLink("View All Rubber Roller", "", "rubberroller", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                        @Html.ActionLink("View Roller Location", "location", "rubberroller", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                        @Html.ActionLink("Add New Rubber Roller", "create", "rubberroller", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="manageRollerDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Roller Maintenance</a>
                    <div class="dropdown-menu" aria-labelledby="manageRollerDropdown">
                        @Html.ActionLink("View All Maintenance", "", "maintenance", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                        @Html.ActionLink("File New Maintenance Report", "CreateSearch", "maintenance", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                    </div>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="manageRollerDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Roller Operation</a>
                    <div class="dropdown-menu" aria-labelledby="manageRollerDropdown">
                        @Html.ActionLink("Roller Issue", "CreateSearch", "schedule", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                        @Html.ActionLink("View All Active Operation", "ActiveOperation", "schedule", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                        @Html.ActionLink("View All Completed Operation", "CompletedOperation", "schedule", routeValues: null, htmlAttributes: new { @class = "dropdown-item" })
                    </div>
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Roller Stock Overview", "stockoverview", "rubberroller", routeValues: null, htmlAttributes: new { @class = "nav-link" })
                </li>
            }

        </ul>
        @Html.Partial("_LoginPartial")
    </div>

    <span class="noti glyphicon glyphicon-bell"><span class="count">&nbsp;</span></span>
    <div class="noti-content">
        <div class="noti-top-arrow"></div>
        <ul id="notiContent"></ul>
    </div>

    <style type="text/css">
        /*Added css for design notification area, you can design by your self*/
        /* COPY css content from youtube video description*/
        .noti-content {
            position: fixed;
            right: 100px;
            background: #e5e5e5;
            border-radius: 4px;
            top: 47px;
            width: 250px;
            display: none;
            border: 1px solid #9E988B;
        }

        ul#notiContent {
            max-height: 200px;
            overflow: auto;
            padding: 0px;
            margin: 0px;
            padding-left: 20px;
        }

            ul#notiContent li {
                margin: 3px;
                padding: 6px;
                background: #fff;
            }

        .noti-top-arrow {
            border-color: transparent;
            border-bottom-color: #F5DEB3;
            border-style: dashed dashed solid;
            border-width: 0 8.5px 8.5px;
            position: absolute;
            right: 32px;
            top: -8px;
        }

        span.noti {
            color: #FF2323;
            margin: 15px;
            position: fixed;
            right: 100px;
            font-size: 18px;
            cursor: pointer;
        }

        span.count {
            position: relative;
            top: -3px;
        }
    </style>

</nav>

